{
  "name": "paralleldevs/drupal-composer",
  "description": "Project template for Drupal 8 projects with composer",
  "type": "project",
  "license": "GPL-2.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Daniel Noyola",
      "email": "danielnv18@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require-dev": {
    "webflo/drupal-core-require-dev": "~8.5"
  },
  "require": {
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "^1.6",
    "drupal-composer/drupal-scaffold": "^2.2",
    "drupal/console": "^1.8.0",
    "drush/drush": "^9.0.0",
    "paralleldevs/quickstart": "8.x-dev",
    "symfony/dotenv": "~3.3|~4.0",
    "webflo/drupal-finder": "^1.0.0",
    "webmozart/path-util": "^2.3"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "pre-install-cmd": [
      "Paralleldevs\\DrupalComposer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "Paralleldevs\\DrupalComposer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "Paralleldevs\\DrupalComposer\\ScriptHandler::createRequiredFiles"
    ],
    "post-update-cmd": [
      "Paralleldevs\\DrupalComposer\\ScriptHandler::createRequiredFiles"
    ],
    "post-create-project-cmd": [
      "Paralleldevs\\DrupalComposer\\ScriptHandler::initProject"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library",
        "type:bower-asset",
        "type:npm-asset"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "enable-patching": true
  }
}
